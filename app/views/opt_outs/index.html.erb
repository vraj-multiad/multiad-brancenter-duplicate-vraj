<table>
  <thead>
    <tr>
      <th>Email address</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @opt_outs.each do |opt_out| %>
      <tr>
        <td><%= opt_out.email_address %></td>
        <td><%= link_to 'Show', opt_out %></td>
