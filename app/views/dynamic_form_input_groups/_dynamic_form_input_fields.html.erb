<div class='container' style=';margin-bottom:20px;background-color:#fff'>
  <div class="col-lg-3 col-md-3 col-xs-3">
    <%= f.label :input_type %>
    <%= f.select :input_type, DynamicFormInput::INPUT_TYPES, {}, class: 'form-control' %>
  </div>
  <div class="col-lg-9 col-md-9 col-xs-9">
    <%= f.label "dl_image" %> (keyword = dynamic_form_input)
    <%= f.select :dl_image_id, @available_dynamic_form_dl_images, {:include_blank => 'select if dl_image'}, class: 'form-control' %>
  </div>
  <div class="col-lg-3 col-md-3 col-xs-3">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="col-lg-6 col-md-6 col-xs-6">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
    <div class="col-lg-2 col-md-2 col-xs-2">
    <%= f.label :required %>: <%= f.check_box :required, class: 'form-control' %>
  </div>
  <div class="col-lg-11 col-md-11 col-xs-11">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control2' %>
  </div>
  <div class="col-lg-4 col-md-4 col-xs-4">
    <%= f.label :html_class %>
    <%= f.text_field :html_class, class: 'form-control' %>
  </div>
  <div class="col-lg-2 col-md-2 col-xs-2">
    <%= f.label :min_date %>
    <%= f.text_field :min_date, class: 'form-control' %>
  </div>
  <div class="col-lg-2 col-md-2 col-xs-2">
    <%= f.label :max_date %>
    <%= f.text_field :max_date, class: 'form-control' %>
  </div>
  <div class="col-lg-3 col-md-3 col-xs-3" style="text-align:center;">
    <%= f.label 'date example' %><br/>
   -7 = 1 week ago<br/>
   365 = 1 year later
  </div>
  <div class="col-lg-11 col-md-11 col-xs-11">
    <%= f.label :input_choices %>
  </div>
  <div class="col-lg-12 col-md-12 col-xs-12">
    <div class="col-lg-7 col-md-7 col-xs-7">
      select(1): options (line separated)<br/>
      select(2): option_title:option_value (line separated)<br/>
      select(system): profile_state_select<br/>
      dl_image: sub_input_type:label (line separated)<br/>
    </div>
    <div class="col-lg-5 col-md-5 col-xs-5">
      <%= f.text_area :input_choices, class: 'form-control2' %>
    </div>
  </div>
  <div class="col-lg-11 col-md-11 col-xs-11" style="margin-bottom:25px;">
    <%= f.hidden_field :_destroy %>
    <%= link_to '[remove ^]', '#', class: 'remove_dynamic_form_inputs', data: { confirm: 'Are you sure?'} %>
  </div>
   
</div>
