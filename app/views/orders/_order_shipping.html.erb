  <div class="row">
    <div class="col-lg-6 " id="prof_name">
      <h4>
      <span class="shipping" style="letter-spacing:1px;">
        <%= @order.ship_first_name %> <%= @order.ship_last_name %>
      </span>
      </h4>
    </div> 
  </div> 

  <div class="editable-area shipping">

    <div class="row"> 
      <div class="col-xs-2 col-sm-3 col-lg-3">
        <%= t '__address__' %>:
      </div>
      <div class="col-xs-4 col-sm-5 col-md-6 col-lg-5" id="prof_address">
        <span class="shipping" >
          <%= @order.ship_address_1 %><br/>
          <% if @order.ship_address_2 %>
            <%= @order.ship_address_2 %><br/>
          <% end %>
          <%= @order.ship_city %>, <%= @order.ship_state %> <%= @order.ship_zip_code %>
        </span>
      </div>
    </div>

    <div class="row bump-10"> 
      <div class="col-xs-2 col-sm-3 col-lg-3">
        <%= t '__phone_single__' %>:
      </div>
      <div class="col-xs-4 col-sm-5 col-md-6 col-lg-5" id="prof_phone">
        <span class="shipping" >
          <%= @order.ship_phone_number %>
        </span>
      </div>
    </div>

    <div class="row bump-10"> 
      <div class="col-xs-2 col-sm-3 col-lg-3">
        <%= t '__email_single__' %>:
      </div>
      <div class="col-xs-4 col-sm-5 col-md-6 col-lg-5" id="prof_email">
        <span class="shipping" >
          <%= @order.ship_email_address %>
        </span>
      </div>
    </div>