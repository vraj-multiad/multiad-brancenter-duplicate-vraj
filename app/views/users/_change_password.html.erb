<div class="content" id="change-password-panel" style="display:none;"> 
  <div class="container">
    <div id="position-help">
      <div id="change-password" style="float:left;margin-bottom:40px;">
        <div id="social-media">
          <%= form_tag(change_password_path, { method: 'PATCH', id: 'change_password_form' }) do |f| %>     

            <h3><strong><%= t '__change_password__' %></strong></h3>

            <div class="row social-headers">
              <div class="col-xs-12 col-sm-12 col-lg-12">

                <% if @user.errors.any? %>
                  <div id="error_explanation">
                    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

                    <ul>
                    <% @user.errors.full_messages.each do |msg| %>
                      <li><%= msg %></li>
                    <% end %>
                    </ul>
                  </div>
                <% end %>
                <div class="form-group">
                  <span><%= t '__Old_Password__' %></span>
                  <%= password_field '', 'old_password', class: "form-control", placeholder: '' %>
                </div>
                <div class="form-group">
                  <span><%= t '__New_Password__' %></span>
                  <%= password_field 'user', 'password', class: "form-control", placeholder: '' %>
                </div>
                <div class="form-group">
                  <span><%= t '__repeat_password__' %></span>
                  <%= password_field 'user', 'password_confirmation', class: "form-control", placeholder: '' %>
                </div>
              </div>
            </div>
              <div class="form-group">
                <button type="button" class="btn btn-default pull-left change-password-cancel"><%= t '__cancel__' %></button>
                <button type="submit" class="btn btn-default pull-right"><%= t '__change_password__' %></button>
              </div>  
 

          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
