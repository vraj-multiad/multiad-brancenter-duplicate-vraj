<div class="col-lg-5 col-md-5 col-sm-8" id="shipping_info" style="display:none;">
  
  <h3 class="gray">Shipping information</h3>

  <div class="row">
    <div class="col-lg-6 " id="prof_name">
      <h4>
      <span class="shipping" >
        <%= @user.ship_first_name %> <%= @user.ship_last_name %>
      </span>
      </h4>
    </div> 
  </div> 

  <div class="editable-area shipping">

    <div class="row"> 
      <div class="col-xs-2 col-sm-3 col-lg-3">
        Address:
      </div>
      <div class="col-xs-4 col-sm-5 col-md-6 col-lg-5" id="prof_address">
        <span class="shipping" >
          <%= @user.ship_address_1 %><br/>
          <% if @user.ship_address_2 %>
            <%= @user.ship_address_2 %><br/>
          <% end %>
          <%= @user.ship_city %>, <%= @user.ship_state %> <%= @user.ship_zip_code %>
        </span>
      </div>
    </div>

    <div class="row bump-10"> 
      <div class="col-xs-2 col-sm-3 col-lg-3">
        Phone:
      </div>
      <div class="col-xs-4 col-sm-5 col-md-6 col-lg-5" id="prof_phone">
        <span class="shipping" >
          <%= @user.ship_phone_number %>
        </span>
      </div>
    </div>

    <div class="row bump-10"> 
      <div class="col-xs-2 col-sm-3 col-lg-3">
        Fax:
      </div>
      <div class="col-xs-4 col-sm-5 col-md-6 col-lg-5" id="prof_fax">
        <span class="shipping" >
          <%= @user.ship_fax_number %>
        </span>
      </div>
    </div>

    <div class="row bump-10"> 
      <div class="col-xs-2 col-sm-3 col-lg-3">
        Email:
      </div>
      <div class="col-xs-4 col-sm-5 col-md-6 col-lg-5" id="prof_email">
        <span class="shipping" >
          <%= @user.ship_email_address %>
        </span>
      </div>
    </div>

    <div class="edit-button"><div class="glyphicon glyphicon-pencil"><br>edit</div></div>

  </div>

</div> <!-- End: #shipping_info -->



<!-- Shipping Info Modal -->
  <div class="modal fade" id="edit_shipping_info">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title">Update your shipping information</h4>
        </div>
        <%= form_tag('/update_profile', method: 'PATCH') do %>
          <%= hidden_field_tag 'source_page', source_page %>
          <div class="modal-body">
            <div class="row">
              <div class="col-lg-6 col-lg-push-3">
                <div class="form-group">
                  <%= text_field_tag 'user[ship_first_name]', @user.ship_first_name , class: "form-control", placeholder: 'First Name' %>
                </div>
                <div class="form-group">
                  <%= text_field_tag 'user[ship_last_name]', @user.ship_last_name , class: "form-control", placeholder: 'Last Name' %>
                </div>
                <div class="form-group">
                  <%= text_field_tag 'user[ship_address_1]', @user.ship_address_1 , class: "form-control", placeholder: 'Address 1' %>
                </div>
                <div class="form-group">
                  <%= text_field_tag 'user[ship_address_2]', @user.ship_address_2 , class: "form-control", placeholder: 'Address 2' %>
                </div>
                <div class="form-group">
                  <%= text_field_tag 'user[ship_city]', @user.ship_city , class: "form-control", placeholder: 'City' %>
                </div>
                <div class="form-group">
                  <%= select_tag 'user[ship_state]', options_for_select(us_states, @user.ship_state), class: "form-control" %>
                </div>
                <div class="form-group">
                  <%= text_field_tag 'user[ship_zip_code]', @user.ship_zip_code , class: "form-control", placeholder: 'Zip Code' %>
                </div>
                <div class="form-group">
                  <%= text_field_tag 'user[ship_phone_number]', @user.ship_phone_number , class: "form-control", placeholder: 'Phone' %>
                </div>
                <div class="form-group">
                  <%= text_field_tag 'user[ship_fax_number]', @user.ship_fax_number , class: "form-control", placeholder: 'Fax' %>
                </div>
                <div class="form-group">
                  <%= text_field_tag 'user[ship_email_address]', @user.ship_email_address , class: "form-control", placeholder: 'Email Address' %>
                </div>
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            <%= button_tag 'Submit', :class => "btn btn-default" %>
          </div>
        <% end %>
      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
  </div><!-- /.modal -->
  <!-- End: Shipping Info Modal -->