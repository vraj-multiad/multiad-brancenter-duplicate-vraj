<h1>Listing shared_page_items</h1>

<table>
  <thead>
    <tr>
      <th>Shared page</th>
      <th>Shareable</th>
      <th>Shareable type</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @shared_page_items.each do |shared_page_item| %>
      <tr>
        <td><%= shared_page_item.shared_page_id %></td>
        <td><%= shared_page_item.shareable_id %></td>
        <td><%= shared_page_item.shareable_type %></td>
        <td><%= link_to 'Show', shared_page_item %></td>
        <td><%= link_to 'Edit', edit_shared_page_item_path(shared_page_item) %></td>
        <td><%= link_to 'Destroy', shared_page_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

