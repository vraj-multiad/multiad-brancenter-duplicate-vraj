<div class="container">
  <div class="category-padding">
    <%= form_tag('/search', :remote => true, :id => 'search_form', :'data-update-search' => 'search-results-area') do %>
      <%= hidden_field_tag 'categories[]', nil, :id => 'search_form_adcreator' %>
      <%= hidden_field_tag 'categories[]', nil, :id => 'search_form_asset-library' %>
      <%= hidden_field_tag 'categories[]', nil, :id => 'search_form_user-library' %>
      <%= hidden_field_tag 'my_documents[]', nil, :id => 'search_form_my-documents' %>
      <%= hidden_field_tag 'user_content[]', nil, :id => 'search_form_user-content' %>
      <%= hidden_field_tag 'ac_images[]', 'ac-images', :id => 'search_form_ac-images' %>
      <%= hidden_field_tag 'my_contributions[]', nil, :id => 'search_form_my-contributions' %>
      <%= hidden_field_tag 'media_types[]', nil, :id => 'search_form_media_types' %>
      <%= hidden_field_tag 'sub_media_types[]', nil, :id => 'search_form_sub_media_types' %>
      <%= hidden_field_tag 'topics[]', nil, :id => 'search_form_topics' %>
      <%= hidden_field_tag 'sub_topics[]', nil, :id => 'search_form_sub_topics' %>
      <%= hidden_field_tag 'user_categories[]', nil, :id => 'search_form_user_categories' %>
      <%= hidden_field_tag 'group_results_by_user_category', '1', :id => 'group_results_by_user_category' %>
      <%= hidden_field_tag 'sort', DEFAULT_SORT, :id => 'search_form_sort' %>
      <%= hidden_field_tag 'clear_categorize', nil, :id => 'clear_categorize' %>
      
      
      <div class="row" id="site-search">
		  <div class="col-lg-12">
		    <div class="input-group input-group-lg">
		      <%= text_field_tag "keywords[]", nil, class: "form-control input-lg", :placeholder => (t '__search_adcreator_images__') %>
		      <span class="input-group-btn">
		      <%= button_tag 'search', type:'submit', :class => "btn btn-default pre-search", data:{ disable_with: '<span class="glyphicon glyphicon-repeat glyphicon-repeat-animate"></span>'} do %>
		        <span class="glyphicon glyphicon-search"></span>
		      <% end %>
			  </span>
	     </div><!-- /input-group -->
	  </div><!-- /.col-lg-12 -->
	</div><!-- /.row -->
      
	<script>
	  $('document').ready(function() {
	    runSearchForm();
	  });
	</script>
	<% end %>
      
  </div>
  <!-- end: SITE SEARCH -->
</div>