<h1>Listing keywords</h1>


<table>
  <thead>
    <tr>
      <th>Term</th>
      <th>Keyword type</th>
      <th>Searchable type</th>
      <th>Searchable id</th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @keywords.each do |keyword| %>
      <tr>
        <td><%= keyword.term %></td>
        <td><%= keyword.keyword_type %></td>        
        <td><%= keyword.searchable_type %></td>
        <td><%= keyword.searchable_id %></td>
        <td></td>
        <td><%#= link_to 'Show', keyword %></td>
        <td><%#= link_to 'Edit', edit_keyword_path(keyword) %></td>
        <td><%#= link_to 'Destroy', keyword, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

