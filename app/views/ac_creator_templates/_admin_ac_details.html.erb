<div class='row'>
  <% ac_creator_templates.each_with_index do |act, i| %>
    <div style="padding:15px;">
      <div class='col-lg-2 col-md-1 ' style='align:top;'>
        <a href='/admin/ac/display?token=<%= act.token.to_s %>'> <%= image_tag( act.thumbnail_url) %> </a>
      </div>
      <div class='col-lg-2 col-md-1 ' style='align:top;'>
        <%= "id: #{act.id} " %><br/>
        <%= "created: #{act.created_at.to_date}" %><br/>
        <%= "name: #{act.name}" %><br/>
        <%= "title: #{act.title}" %><br/>
        <%= "status: #{act.status}" %><br/>
        <%= "pub at: #{act.publish_at}" %><br/>
        <%= "unpub at #{act.unpublish_at}" %><br/>

        <% case act.status %>
        <% when 'staged' %>
        <a href='/admin/ac/publish?token=<%= act.token.to_s %>&status=unstaged'> Unstage template </a><br/>
        <% when 'processed' %>
        <a href='/admin/ac/publish?token=<%= act.token.to_s %>&status=unstaged'> Unstage template </a><br/>
        <a href='/admin/ac/publish?token=<%= act.token.to_s %>&status=production'> Publish (Production) template </a><br/>
        <% when 'production' %>
        <a href='/admin/ac/publish?token=<%= act.token.to_s %>&status=unpublished'> UnPublish template </a><br/>
        <% when 'unstaged' %>
        <a href='/admin/ac/publish?token=<%= act.token.to_s %>&status=staged'> Stage template </a><br/>
        <% when 'unpublished' %>
        <a href='/admin/ac/publish?token=<%= act.token.to_s %>&status=staged'> Stage template </a><br/>
        <a href='/admin/ac/publish?token=<%= act.token.to_s %>&status=unstaged'> Unstage template </a><br/>
        <% end %>
      </div>
    </div>
    <% if (i + 1) % 3 == 0 %>
      <div class='col-lg-12'>&nbsp;</div>
    <% end %>
  <% end %>
</div>
